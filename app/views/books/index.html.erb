<% @books.each do |book| %>
<div id="book-<%= book.id %>"
  <h3><%= book.title %></h3>
  <% book.authors.each do |author| %>
  <h4><%= author.name %></h4>
  <% end %>
  <h4>Pages: <%= book.pages %></h4>
  <h4>Year: <%= book.year %></h4>
  <h4>Total reviews: <%= book.reviews.count %></h4>
  <h4>Average rating: <%= book.average_rating(book.id) %></h4>
</div>
<% end %>
